{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c17",
            "cppStandard": "gnu++14",
            "intelliSenseMode": "windows-gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools"
        },
        {
            "name": "arm-cmsis",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG", // 用于启动调试相关的代码
                "UNICODE", // 启用unicode支持
                "_UNICODE", // 
                "USE_HAL_DRIVER", // 使用HAL驱动程序库
                "STM32F407xx", // 目标微控制器型号
                "ARM_MATH_CM4", // 使用ARM Cortex-M4 处理器的数学库
                "ARM_MATH_MATRIX_CHECK", // 启用矩阵运算的检查功能
                "ARM_MATH_ROUNDING", // 启用数学运算的舍入功能
                "ARM_MATH_LOOPUNROLL", // 启用循环展开优化
                "DISABLEFLOAT16" // 禁用16位浮点数支持
            ],
            "cStandard": "c17", // 指定c语言标准为C 17
            "cppStandard": "c++17", // 指定c++语言标准为c++ 17
            "intelliSenseMode": "gcc-arm", // 
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}